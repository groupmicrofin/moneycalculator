<?xml version="1.0" encoding="utf-8"?>
<GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="16dp"
    android:paddingRight="16dp"
    android:paddingTop="16dp"
    android:paddingBottom="16dp"
    android:layout_column="2"
    tools:context=".GroupRegistrationActivity"
    >

 <TextView android:text="@string/grpRegNo"
     android:layout_width="wrap_content"
     android:layout_height="wrap_content"
     android:layout_column="0"
     android:layout_row="0"
     />
    <EditText android:id="@+id/groupRegNo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="@string/hint.grpRegNo"
        android:layout_column="1"
        android:layout_row="0"
        />

    <TextView android:text="@string/grpName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_column="0"
        android:layout_row="1"
        />
    <EditText android:id="@+id/groupName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="@string/hint.grpName"
        android:layout_column="1"
        android:layout_row="1"
        />

    <TextView android:text="@string/startDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_column="0"
        android:layout_row="2"
        />
    <EditText android:id="@+id/groupStartDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_column="1"
        android:layout_row="2"
        android:inputType="date"
        />

    <TextView android:text="@string/shareAmt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_column="0"
        android:layout_row="3"
        />
    <EditText android:id="@+id/shareAmount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="@string/hint.shareAmt"
        android:layout_column="1"
        android:layout_row="3"
        android:inputType="numberDecimal"
        />

    <TextView android:text="@string/intRate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_column="0"
        android:layout_row="4"
        />
    <EditText android:id="@+id/interestRate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="@string/hint.intRate"
        android:layout_column="1"
        android:layout_row="4"
        android:inputType="numberDecimal"
        />

    <Button android:layout_width="wrap_content" android:layout_height="wrap_content"
        android:layout_columnSpan="2" android:id="@+id/registerGroup" android:text="@string/register"
        android:onClick="registerGroup"
        android:layout_column="0"
        android:layout_row="5"
        android:layout_gravity="center_horizontal"
        />
</GridLayout>